{
  "root": true,  // declare that this is the project root, so it doesn't look at any parent dir
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "parserOptions": {
    "ecmaVersion": 7,  // use ES7
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  // Any rules to override
  "rules": {
    "no-console": 1
  }
}
